# Backend (APM) Configuration
# New Relic License Key（必須）
# ※ License Keyは「API keys」ページまたは「Account settings」から取得可能
NEW_RELIC_API_KEY=your-license-key-here

# New Relic アプリケーション名
NEW_RELIC_APP_NAME=slm-handson-api

# パフォーマンス調整用環境変数
# エラー応答率（0.0〜1.0）- ハンズオン初期状態では0.0を推奨
ERROR_RATE=0.0

# 最小レスポンス時間（ミリ秒）
RESPONSE_TIME_MIN=50

# 最大レスポンス時間（ミリ秒）
RESPONSE_TIME_MAX=500

# 遅延エンドポイントの発生率（0.0〜1.0）- ハンズオン初期状態では0.0を推奨
SLOW_ENDPOINT_RATE=0.0

# Frontend (RUM) Configuration
# New Relic Browser License Key（必須）
# ※ Browser applicationの設定画面から取得可能
NEXT_PUBLIC_NEW_RELIC_BROWSER_KEY=your-browser-license-key-here

# New Relic アカウントID（必須）
NEXT_PUBLIC_NEW_RELIC_ACCOUNT_ID=your-account-id

# New Relic BrowserアプリケーションID（必須）
# ※ ブラウザアプリを作成済みの場合はBrowser UIのURLまたはJSスニペットから取得
# ※ 必須項目：未設定の場合RUMは動作しません
NEXT_PUBLIC_NEW_RELIC_APPLICATION_ID=your-application-id

# Load Generator Configuration
# 負荷テスト対象URL
TARGET_URL=http://localhost:3000

# 同時ユーザー数
USERS_COUNT=10

# ユーザー生成速度（ユーザー/秒）
SPAWN_RATE=1

# テスト実行時間（秒）
DURATION=300

# シナリオタイプ（normal, heavy, error）
SCENARIO=normal