# Backend (APM) Configuration
# New Relic APIキー（必須）
NEW_RELIC_API_KEY=your-api-key-here

# New Relic アプリケーション名
NEW_RELIC_APP_NAME=slm-handson-api

# パフォーマンス調整用環境変数
# エラー応答率（0.0〜1.0）
ERROR_RATE=0.1

# 最小レスポンス時間（ミリ秒）
RESPONSE_TIME_MIN=50

# 最大レスポンス時間（ミリ秒）
RESPONSE_TIME_MAX=500

# 遅延エンドポイントの発生率（0.0〜1.0）
SLOW_ENDPOINT_RATE=0.2

# Frontend (RUM) Configuration
# New Relic Browser APIキー（必須）
NEXT_PUBLIC_NEW_RELIC_BROWSER_KEY=your-browser-key-here

# New Relic アカウントID（必須）
NEXT_PUBLIC_NEW_RELIC_ACCOUNT_ID=your-account-id

# New Relic アプリケーションID（必須）
NEXT_PUBLIC_NEW_RELIC_APPLICATION_ID=your-app-id

# Load Generator Configuration
# 負荷テスト対象URL
TARGET_URL=http://localhost:3000

# 同時ユーザー数
USERS_COUNT=10

# ユーザー生成速度（ユーザー/秒）
SPAWN_RATE=1

# テスト実行時間（秒）
DURATION=300

# シナリオタイプ（normal, heavy, error）
SCENARIO=normal